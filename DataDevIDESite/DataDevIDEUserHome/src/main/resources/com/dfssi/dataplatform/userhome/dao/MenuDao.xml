  <!--检查菜单名是否重复-->
  <select id="countByName" resultType="int">
        select count(*) from dv_menu
        where menu_name=#{menuName}
    </select>

  <!--修改时判断菜单名与其他菜单名是否冲突-->
  <select id="countByUpdate" resultType="int">
        select count(*) from dv_menu
        where pk_id!=#{id}
        and menu_name=#{menuName}
    </select>

  <!--根据条件查询菜单-->
  <select id="selectByEntity" resultMap="BaseResultMap">
    select
    DISTINCT
    PK_ID,
    MENU_NAME,
    ORDER_NUM,
    REMARK,
    PARENT_MENU,
    IS_DELETED,
    ACCESS_URL,
    OWNED_SYSTEM
    from dv_menu
    where IS_DELETED=0
    <if test="pid!=null and pid!=''">
      and PARENT_MENU=#{pid}
    </if>
    <if test="(pid==null or pid=='') and system!=null and system!=''">
      and OWNED_SYSTEM=#{system}
    </if>
  </select>

  <select id="selectBySystem" resultMap="BaseResultMap">
    select
    DISTINCT
    PK_ID,
    MENU_NAME,
    ORDER_NUM,
    REMARK,
    PARENT_MENU,
    IS_DELETED,
    ACCESS_URL,
    OWNED_SYSTEM
    from dv_menu
    where IS_DELETED=0
    and OWNED_SYSTEM=#{system}
    and PARENT_MENU=''
  </select>

  <select id="selectByParentMenu" resultMap="BaseResultMap">
    select
    DISTINCT
    PK_ID,
    MENU_NAME,
    ORDER_NUM,
    REMARK,
    PARENT_MENU,
    IS_DELETED,
    ACCESS_URL,
    OWNED_SYSTEM
